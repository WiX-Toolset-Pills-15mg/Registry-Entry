<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>

        <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">

            <Component>
                <File Id="DummyFile" Source="$(var.ProjectDir)dummy.txt" KeyPath="yes" />
            </Component>

            <!--
            ================================================================================
            Step 1 (Create): Add component
            ================================================================================
            
            This component will take care to add the specified registry key and value at install time.
            It will also remove it at uninstall time because of the `Action="createAndRemoveOnUninstall"` attribute.
            
            [Next]: No other step is needed.
            -->

            <Component>
                <RegistryKey
                    Root="HKLM"
                    Key="Software\Dust in the Wind\Registry Entry"
                    Action="createAndRemoveOnUninstall">

                    <RegistryValue
                        Type="string"
                        Name="GitHub"
                        Value="https://github.com/WiX-Toolset-Pills-15mg/Registry-Entry"
                        KeyPath="yes" />

                </RegistryKey>
            </Component>

        </ComponentGroup>

    </Fragment>
</Wix>